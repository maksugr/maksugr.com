---
import type { MarkdownLayoutProps } from "astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";

type Props = MarkdownLayoutProps<{ title: string; description?: string }>;

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`} description={frontmatter.description}>
  <Header />
  <main id="main-content" class="app-layout mt-8">
    <section id="about" class="app-prose mb-28 max-w-app prose-img:border-0">
      <h1 class="text-3xl font-heading tracking-tight sm:text-4xl">{frontmatter.title}</h1>
      <slot />
    </section>
  </main>
  <Footer />
</Layout>
