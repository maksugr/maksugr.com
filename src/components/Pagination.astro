---
import { Icon } from "astro-icon/components";
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import LinkButton from "./LinkButton.astro";

type Props = {
  page: Page<CollectionEntry<"blog">>;
};

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav
      class="mt-auto mb-8 flex justify-center"
      role="navigation"
      aria-label="Pagination Navigation"
    >
      <LinkButton
        disabled={!page.url.prev}
        href={page.url.prev as string}
        class:list={["me-4 select-none font-heading text-lg", { "opacity-30": !page.url.prev }]}
        aria-label="Goto Previous Page"
      >
        <Icon name="carbon:arrow-left" class="inline-block size-5" />
        Prev
      </LinkButton>
      <span class="font-heading text-lg">{page.currentPage} / {page.lastPage}</span>
      <LinkButton
        disabled={!page.url.next}
        href={page.url.next as string}
        class:list={["ms-4 select-none font-heading text-lg", { "opacity-30": !page.url.next }]}
        aria-label="Goto Next Page"
      >
        Next
        <Icon name="carbon:arrow-right" class="inline-block size-5" />
      </LinkButton>
    </nav>
  )
}
